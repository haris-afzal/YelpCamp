<% layout('/layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center mb-4">Edit Campground</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" novalidate
            class="needs-validation fs-5" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</Title></label>
                <input class="form-control" type="text" id="title" name="campground[title]"
                    value="<%= campground.title %>" required>
                <div class="invalid-feedback">
                    Please enter a Title
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="campground[location]"
                    value="<%= campground.location %>" required>
                <div class="invalid-feedback">
                    Please enter a Location
                </div>
            </div>
            <div class="mb-3">
                <label for="formFileMultiple" class="form-label">Add more Images</label>
                <input class="form-control" type="file" id="formFileMultiple" name="image" multiple>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description of site</label>
                <textarea class="form-control" type="text" id="description" name="campground[description]"
                    required><%= campground.description %></textarea>
                <div class="invalid-feedback">
                    Please provide a description
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="price-currency">$</span>
                    <input type="text" class="form-control" placeholder="0.00" id="price" name="campground[price]"
                        aria-describedby="price-currency" value="<%= campground.price %>" required>
                    <div class="invalid-feedback">
                        Please provide price
                    </div>
                </div>
            </div>
            <div class="mb-4 mt-4">
                <% campground.images.forEach(function(img, i) {%>

                <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="" style="max-height: 10em;">
                <div class="form-check-inline">
                    <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= img.filename %>">
                </div>
                <label for="image-<%= i %>" class="fs-5">Remove</label>



                <% }) %>
            </div>
            <div class="mb-3 gap-2 d-grid">
                <button class="btn btn-primary btn-lg">Save Changes</button>
            </div>
        </form>

        <div class="mb-5 gap-2 d-grid">
            <a class="btn btn-secondary btn-lg" href="/campgrounds/<%= campground._id %>">Back to campground</a>
        </div>

    </div>
</div>